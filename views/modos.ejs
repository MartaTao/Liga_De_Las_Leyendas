<%- include("templates/cabecera.ejs") %>
<title>Modos</title>
</head>
<body>
    <div class="container">
        <h1>Modo</h1>
        <div class="row">
            <div class="col-6"><a class="btn btn-success btn-block my-4" href="/modos/crearModo">Crear un nuevo campeon</a></div>
            <div class="col-6"><a class="btn btn-success btn-block my-4" href="/menu">Volver</a></div>
        </div>
        <table class="table table-sm text-info">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Imágen  </th>
                    <th scope="col">NumJugadores</th>
                    <th scope="col">Descripcion</th>
                    <th scope="col">Acción</th>
                </tr>
            </thead>
            <tbody>
                <% if (arrayModo.length> 0) { %>
                    <!--Haremos el foreach para recorrer el array-->
                    <% arrayModo.forEach(modo => { %>
                        <tr>
                            <th scope="row">
                                <%= modo.id %>
                            </th>
                            <td>
                                <%= modo.Nombre %>
                            </td>
                            <td>
                                <img src="<%= modo.Img%>" width="100%">
                            </td>
                            <td>
                                <%= modo.NumJugadores %>
                            </td>
                            <td>
                                <%= modo.Descripcion %>
                            </td>
                            <td>
                                <a class="btn btn-warning btn-sm" href="modos/<%= modo.id %>/editar">Editar/Eliminar</a>
                            </td>
                        </tr>
                        <% }) %>
                            <% } %>
            </tbody>
        </table>
    </div>
    <%- include("templates/footer.ejs") %>