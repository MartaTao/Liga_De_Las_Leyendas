
<%- include("templates/cabecera.ejs", {cabecera: 'Nuevo Campeon' }) %>

    <div class="container">
        <div><a class="btn btn-success btn-block my-4" href="/">Volver</a></div>
        <h1>Añadir nuevo campeón</h1>
        <form action="/campeones" class="my-2" method="POST">
            <input type="text" placeholder="Nombre del campeon" class="form-control my-2" name="Nombre">
            <input type="text" placeholder="Fecha de Salida" class="form-control my-2" name="FechaSalida">
            <input type="text" placeholder="Habilidades" class="form-control my-2" name="Habilidades">
            <input type="text" placeholder="Lore" class="form-control my-2" name="Lore">
            <input type="text" placeholder="Precio" class="form-control my-2" name="Precio">
            <input type="text" placeholder="Región" class="form-control my-2" name="Region">
            <button type="submit" class="btn btn-dark btn-block">
                Agregar
            </button>
        </form>
    </div>
